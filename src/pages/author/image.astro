<div id="upload_widget"></div>

<script is:inline src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script is:inline>
const widget = cloudinary.applyUploadWidget(
  document.getElementById("upload_widget"),
  { 
    // TODO: Change to env variable
    cloudName: 'de4xlna6t',
    uploadPreset: 'xihaf6dh',
  }, 
  (error, result) => { 
    if (!error && result && result.event === "success") { 
      console.log('Done uploading..: ', result.info); 
    }
  }
);

document.getElementById("upload_widget").addEventListener("click", function() {
  widget.open();
}, false);
</script>
